 <div class="container" style="margin-top:20px;">
   <div class="row">
    <div class="card" style="background-color: gray;">
      <div class="card-body">
        <div class="accordion accordion-flush" id="accordionFlushExample">
          <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingOne">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
               <p><i class="fas fa-ad"></i> Publish Advertisment</p> 
              </button>
            </h2>
            <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
              <div class="accordion-body">
                <!----form---->
                <form action="/sellerad" method="POST">
                  <div class="mb-3">
                    <div class="row">
                      <div class="col-6">
                        <label for="itemname" class="form-label">Item Name</label>
                      <input type="text" class="form-control" id="itemname" name="itemname" required> 
                      </div>
                      <div class="col-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category" name="category" required>
                          <option selected disabled value="">Choose...</option>
                          <option>Plants</option>
                          <option>Seeds</option>
                          <option>Tools</option>
                          <option>Fertilizer</option>
                        </select>
                        <div class="invalid-feedback">
                          Please select a valid category.
                        </div> 
                      </div>
                      <div class="col-3">
                        <label for="subcategory" class="form-label">SubCategory</label>
                        <select class="form-select" id="subcategory" name="subcategory" required>
                          <option selected disabled value="">Choose...</option>
                          <option>Flowering Plants</option>
                          <option>Vegetable Plants</option>
                          <option>Herbal Plants</option>
                          <option>Fancy and other Plants</option>
                          <option>Flowering Seeds</option>
                          <option>Vegetable Seeds</option>
                          <option>Herb Seeds</option>
                          <option>Organic Seeds</option>
                          <option>Forestry and other Seeds</option>
                          <option>Garden Hand Tools</option>
                          <option>Garden Forks</option>
                          <option>Yards and Rakes</option>
                          <option>Spades</option>
                          <option>Clearing Tools</option>
                          <option>Organic Fertilizer</option>
                          <option>Non Organic Fertilizer</option>
                        </select>
                        <div class="invalid-feedback">
                          Please select a valid subcategory.
                        </div> 
                      </div>
                    </div>
                    
                  </div>
                  <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="description" name="description">
                  </div>
                  <div class="mb-3">
                    <div class="row">
                      <div class="col-6">
                        <label for="qty" class="form-label">Quantity</label>
                      <input type="text" class="form-control" id="qty" name="qty"> 
                      </div>
                      <div class="col-6">
                        <label for="price" class="form-label">Item Price</label>
                      <input type="text" class="form-control" id="price" name="price"> 
                      </div>
                    </div>
                    
                  </div>

                  <div class="mb-3">
                    <label for="keyword" class="form-label">Keywords</label>
                    <input type="text" class="form-control" id="keyword" name="keyword">
                  </div>
                  <div class="mb-3">
                    <label for="formFile" class="form-label">Choose a image for Ad</label>
                    <input class="form-control" type="file" id="formFile" name="formFile">
                  </div>
                  <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                  </div>
                  <button type="submit" class="btn btn-primary">Publish Advertisement</button>
                </form>

                <!------------>
              </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingTwo">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
               <p><i class="fas fa-bullhorn"></i> Current Advertisments</p>
              </button>
            </h2>
            <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
              <div class="accordion-body"> 
                {{#if result}}
    {{#each result}}
      <div class="card" style="margin-top:10px">
        <div class="card-header">
          item name: {{this.item_name}} / Category: {{this.category}}
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <div class="row">
                <div class="col-5">
                    <img src="{{{this.image}}}" style="width:100px;height:100px" alt="">
                </div>
                <div class="col-4">
                    <h6>Item description:{{this.description}}</h6>
                    <h6 style="color:red"> Rs.{{this.price}}.00</h6>
                    <h6>Available Qty:{{this.quantity}}</h6>
                </div>
                
                <div class="col-3">
                    
                    <a class="btn btn-outline-warning" href="/itempause/{{{this.item_id}}}"><i class="fas fa-pause-circle"></i></a>
                    <a class="btn btn-outline-danger" href="/itemdelete/{{{this.item_id}}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </div>
                
                
            </div>
            
          </blockquote>
        </div>
      </div>
      {{/each}}
      {{/if}}
              </div>
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <h2 class="accordion-header" id="flush-headingThree">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseOne">
             <p><i class="far fa-pause-circle"></i> Paused Advertisments</p>
            </button>
          </h2>
          <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
            <div class="accordion-body">
               {{#if resultt}}
    {{#each resultt}}
      <div class="card" style="margin-top:10px">
        <div class="card-header">
          item name: {{this.item_name}} / Category: {{this.category}}
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <div class="row">
                <div class="col-5">
                    <img src="{{{this.image}}}" style="width:100px;height:100px" alt="">
                </div>
                <div class="col-4">
                    <h6>Item description:{{this.description}}</h6>
                    <h6 style="color:red"> Rs.{{this.price}}.00</h6>
                    <h6>Available Qty:{{this.quantity}}</h6>
                </div>
                
                <div class="col-3">
                    
                    <a class="btn btn-outline-warning" href="/itempublish/{{{this.item_id}}}"><i class="fas fa-bullhorn"></i></a>
                    <a class="btn btn-outline-danger" href="/itemdelete/{{{this.item_id}}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </div>
                
                
            </div>
            
          </blockquote>
        </div>
      </div>
      {{/each}}
      {{/if}}
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>

   </div>
